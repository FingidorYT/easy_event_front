<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg3"
    tools:context=".RegisterEmpresa">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.7"
        android:background="@color/my_primary" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"

        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:alpha="8.7"
            android:gravity="center"
            android:text="INFORMACION DE TU EMPRESA"
            android:textColor="@color/white"
            android:textSize="50sp"
            android:textStyle="bold" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="190dp"
        app:cardCornerRadius="50dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="490dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingVertical="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="8.7"
                android:text="Nit Empresa"
                android:textSize="20sp"
                android:textStyle="bold" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="10dp" />

            <EditText
                android:id="@+id/nitEmp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edittext_borde"
                android:inputType="number" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="8.7"
                android:text="DirecciÃ³n Empresa"
                android:textSize="20sp"
                android:textStyle="bold" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="10dp" />

            <EditText
                android:id="@+id/direEmp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edittext_borde"
                android:inputType="text" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="8.7"
                android:text="Nombre Empresa"
                android:textSize="20sp"
                android:textStyle="bold" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="10dp" />

            <EditText
                android:id="@+id/nomEmp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edittext_borde"
                android:inputType="text" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="8.7"
                android:text="Telefono Empresa"
                android:textSize="20sp"
                android:textStyle="bold" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="10dp" />

            <EditText
                android:id="@+id/telEmp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edittext_borde"
                android:inputType="phone" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="8.7"
                android:text="Correo Empresa"
                android:textSize="20sp"
                android:textStyle="bold" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="10dp" />

            <EditText
                android:id="@+id/corrEmp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edittext_borde"
                android:inputType="textEmailAddress" />

        </LinearLayout>




    </androidx.cardview.widget.CardView>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="800dp">

        <Button
            android:id="@+id/volverButton"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:background="@drawable/boton_redondo"
            android:gravity="center"
            android:text="Volver"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <Button
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="190dp"
            android:background="@drawable/boton_redondo"
            android:gravity="center"
            android:onClick="registerEmpresa"
            android:text="Crear Cuenta"
            android:textColor="@android:color/white"
            android:textSize="18sp" />



    </RelativeLayout>

</RelativeLayout>

